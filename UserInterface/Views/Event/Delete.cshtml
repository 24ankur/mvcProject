@model SharedLogic.ViewModels.EventViewModel

@{
    ViewBag.Title = "Delete";
}


<h2>Event Name : @Html.DisplayFor(model => model.TitleOfTheBook)</h2>
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.TitleOfTheBook)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TitleOfTheBook)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>


        @if (Model.StartTime != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartTime)
            </dd>

        }

        @if (Model.DurationInHours != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.DurationInHours)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DurationInHours)
            </dd>
        }


        @if (Model.Description != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        }

        @if (Model.OtherDetails != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.OtherDetails)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OtherDetails)
            </dd>
        }

        @if (Model.InviteByEmails != null)
        {
            <dt>
                Total Invitations
            </dt>

            <dd>
                @Model.InviteByEmails.Replace(" ", "").Split(',').Count()
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
